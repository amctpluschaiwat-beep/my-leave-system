{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "holidays": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'hr' || root.child('users').child(auth.uid).child('role').val() === 'Manager' || root.child('users').child(auth.uid).child('role').val() === 'commander'"
    },
    "holidayHistory": {
      ".read": "auth != null",
      ".write": "root.child('users').child(auth.uid).child('role').val() === 'hr' || root.child('users').child(auth.uid).child('role').val() === 'Manager' || root.child('users').child(auth.uid).child('role').val() === 'commander'"
    },
    "leaves": {
      ".indexOn": ["userId", "status", "submittedAt", "startDate"]
    },
    "overtimes": {
      ".indexOn": ["userId", "status", "submittedAt", "startDate"]
    },
    "users": {
      ".indexOn": ["department", "role"]
    }
  }
}